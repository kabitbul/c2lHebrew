{
  "expo": {
    "name": "Click2Lock",
    "slug": "Click2Lock",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/c2l.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/c2lSplash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kabitbul.c2lHebrew",
      "buildNumber": "1.0.1",
      "NSCameraUsageDescription":"This app uses the camera to scan barcodes on a supermarket Carts Locks and unlock the cart to start shopping."
    },
    "android": {
      "package": "com.kabitbul.c2lHebrew",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/c2l.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "infoPlist": {
      "NSCameraUsageDescription": "This app uses the camera to scan barcodes on a supermarket Carts Locks."
    }
  }
}
